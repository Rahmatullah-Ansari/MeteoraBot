<Window
    x:Class="MeteoraCore.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeteoraCore"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="450"
    Closed="OnWindowClosed"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="70" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="200" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="200" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="70" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <LinearGradientBrush x:Key="BrushStyle_Insta" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0" Color="#8a3ab9" />
            <GradientStop Offset="1" Color="#4c68d7" />
            <GradientStop Offset="0.209" Color="#cd486b" />
        </LinearGradientBrush>



    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}" />
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="MainGrid">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="GridMenu"
                Grid.RowSpan="2"
                Width="70"
                MinWidth="70"
                HorizontalAlignment="Left"
                Background="White">
                <Grid.Effect>
                    <DropShadowEffect
                        BlurRadius="2"
                        ShadowDepth="1"
                        Color="#FFAEAEAE" />
                </Grid.Effect>
                <StackPanel>
                    <Grid
                        Height="80"
                        Background="White"
                        RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </Grid.RenderTransform>

                        <Button
                            x:Name="ButtonOpenMenu"
                            Width="60"
                            Height="60"
                            Margin="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="ButtonOpenMenu_Click"
                            Foreground="#FF31577E">
                            <materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Kind="Menu" />
                        </Button>
                        <Button
                            x:Name="ButtonCloseMenu"
                            Width="200"
                            Height="60"
                            Margin="5"
                            VerticalAlignment="Top"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="ButtonCloseMenu_Click"
                            Foreground="#FF31577E"
                            Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">

                                <StackPanel
                                    x:Name="TextBlockModelName"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        FontFamily="{DynamicResource RubikMedium}"
                                        FontSize="35"
                                        Foreground="#f55832">
                                        Mate<Run
                                            FontFamily="{DynamicResource RubikMedium}"
                                            FontSize="35"
                                            Foreground="#092E5A"
                                            Text="ora" />
                                    </TextBlock>
                                    <TextBlock
                                        Margin="2,-5,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        FontFamily="{DynamicResource RubikLight}"
                                        FontSize="10"
                                        Foreground="#092E5A"
                                        Text="M   a   n   a   g   e   m   e   n   t" />
                                </StackPanel>


                                <materialDesign:PackIcon
                                    Width="40"
                                    Height="40"
                                    Margin="10,0,0,0"
                                    Kind="ArrowLeft" />
                            </StackPanel>
                        </Button>


                        <Image Height="80" VerticalAlignment="Bottom" />
                    </Grid>
                    <ListView
                        x:Name="ListViewMenu"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectedIndex="0"
                        SelectionChanged="ListViewMenu_SelectionChanged">
                        <ListViewItem x:Name="ItemLogger" Height="50">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="25"
                                    Height="25"
                                    Margin="10"
                                    Foreground="{DynamicResource AccentColorBrush5}"
                                    Kind="Console" />
                                <TextBlock
                                    Margin="20,10"
                                    VerticalAlignment="Center"
                                    FontFamily="Arial"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Logger" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="ItemAccounts" Height="50">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="25"
                                    Height="25"
                                    Margin="10"
                                    Foreground="{StaticResource BrushStyle_Insta}"
                                    Kind="Account" />
                                <TextBlock
                                    Margin="20,10"
                                    VerticalAlignment="Center"
                                    FontFamily="Arial"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Accounts" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="ItemOrders" Height="50">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="25"
                                    Height="25"
                                    Margin="10"
                                    Foreground="#3B5998"
                                    Kind="Publish" />
                                <TextBlock
                                    Margin="20,10"
                                    VerticalAlignment="Center"
                                    FontFamily="Arial"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Orders" />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem x:Name="ItemSettings" Height="50">
                            <!--<materialDesign:ColorZone Background="SteelBlue" CornerRadius="10" >-->
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="25"
                                    Height="25"
                                    Margin="10"
                                    Foreground="SteelBlue"
                                    Kind="Settings" />
                                <TextBlock
                                    Margin="20,10"
                                    VerticalAlignment="Center"
                                    FontFamily="Arial"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Settings" />
                            </StackPanel>
                        </ListViewItem>
                    </ListView>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="GridMain"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="{DynamicResource UserControlBackgroundBrush}">
                    <StackPanel
                        Margin="10"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">

                        <!--  Theme Toggle  -->
                        <ToggleButton
                            x:Name="ThemeToggle"
                            Margin="20,0,10,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Checked="ThemeToggle_Checked"
                            Cursor="Hand"
                            Unchecked="ThemeToggle_Unchecked">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Grid
                                        x:Name="ToggleGrid"
                                        Width="60"
                                        Height="33">

                                        <!--  Background Border for the switch  -->

                                        <Border
                                            x:Name="Border"
                                            Width="{Binding ElementName=ToggleGrid, Path=ActualWidth}"
                                            Height="{Binding ElementName=ToggleGrid, Path=ActualHeight}"
                                            BorderThickness="2"
                                            CornerRadius="15">
                                            <Border.BorderBrush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Offset="0" Color="#B0CB0E" />
                                                    <GradientStop Offset="1" Color="#38BBC8" />
                                                </LinearGradientBrush>
                                            </Border.BorderBrush>
                                            <Border.Background>
                                                <SolidColorBrush Color="White" />
                                            </Border.Background>
                                        </Border>


                                        <!--  Toggle Button Handle (Ellipse with ImageBrush)  -->

                                        <Ellipse
                                            x:Name="Handle"
                                            Width="25"
                                            Height="25"
                                            Margin="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center">
                                            <Ellipse.RenderTransform>
                                                <TranslateTransform x:Name="HandleTransform" X="0" />
                                            </Ellipse.RenderTransform>
                                            <Ellipse.Fill>
                                                <ImageBrush
                                                    x:Name="HandleBrush"
                                                    ImageSource="Images/sunIcon.png"
                                                    Stretch="UniformToFill" />
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <Grid x:Name="toggleCircle" Visibility="Collapsed">
                                            <Ellipse
                                                Width="22"
                                                Height="22"
                                                Margin="0,0,5,0"
                                                HorizontalAlignment="Right"
                                                Fill="White" />
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Handle" Property="Visibility" Value="Collapsed" />
                                            <Setter TargetName="toggleCircle" Property="Visibility" Value="Visible" />
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource DarkPrimaryColor}" />
                                            <Setter TargetName="toggleCircle" Property="HorizontalAlignment" Value="Right" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <!--  Minimize Button  -->
                        <Button
                            Width="15"
                            Height="20"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="MinimizeButton_Click"
                            Content="&#xE921;"
                            Cursor="Hand"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="15"
                            FontWeight="SemiBold"
                            ToolTip="Minimize">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush5}" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="Transparent">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                </Style>
                            </Button.Style>
                        </Button>
                        <!--  Maximize Button  -->
                        <ToggleButton
                            Name="ToggleButton"
                            Width="22"
                            Height="22"
                            Margin="20,0,20,0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="ToggleButton_Click"
                            Cursor="Hand"
                            ToolTip="Maximize">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Grid>
                                                    <Rectangle
                                                        x:Name="rectangle1"
                                                        Width="15"
                                                        Height="15"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Fill="Transparent"
                                                        RadiusX="3"
                                                        RadiusY="3"
                                                        Stroke="{DynamicResource AccentColorBrush5}"
                                                        StrokeThickness="1.5"
                                                        Visibility="Visible" />
                                                    <Rectangle
                                                        x:Name="rectangle2"
                                                        Width="15"
                                                        Height="15"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Fill="{DynamicResource UserControlBackgroundBrush}"
                                                        RadiusX="3"
                                                        RadiusY="3"
                                                        Stroke="{DynamicResource AccentColorBrush5}"
                                                        StrokeThickness="1.5" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="rectangle2" Property="Visibility" Value="Collapsed" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="rectangle2" Property="Visibility" Value="Visible" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--  Close  Button  -->
                        <Button
                            Width="25"
                            Height="25"
                            Margin="0,-4,0,0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="CloseButton_Click"
                            Content="&#xE8BB;"
                            Cursor="Hand"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource AccentColorBrush5}"
                            ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Foreground" Value="#092E5A" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="Transparent">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <!--  Default color  -->
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Red" />
                                            <!--  Hover color  -->
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!--<dragablz:TabablzControl Name="MainWindowTab" TabStripPlacement="Left">
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <UserControl x:Name="AllTabControl" Content="{Binding Content.Value}" />
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ContentTemplate>

                </dragablz:TabablzControl>-->

            </Grid>

        </Grid>

    </Grid>


</Window>
