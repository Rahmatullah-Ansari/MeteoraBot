<Window
    x:Class="MeteoraBot.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeteoraBot"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Closed="OnWindowClosed"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="30" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label
                    Content="Enter Account Url"
                    FontSize="16"
                    FontWeight="SemiBold" />
                <Border
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="5">
                    <TextBox
                        MinWidth="300"
                        Margin="3,0"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        Text="{Binding AccountUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <Label
                    Content="Enter Chrome Profile Path"
                    FontSize="16"
                    FontWeight="SemiBold" />
                <Border
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="5">
                    <TextBox
                        MinWidth="300"
                        Margin="3,0"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        Text="{Binding ChromeProfile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
            </StackPanel>
            <Button
                Width="200"
                Height="30"
                Margin="15"
                Command="{Binding ConnectAccount}"
                Content="Connect Account" />
        </StackPanel>
    </Grid>
</Window>
